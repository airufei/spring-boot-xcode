<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xmf.xcode.menu.dao.MenuDao">

    <sql id="jobMenuColumns">
	   str_to_date(a.create_time, '%Y-%m-%d %H:%i:%s') AS "createTimestr",
	   str_to_date(a.update_time, '%Y-%m-%d %H:%i:%s') AS "updateTimestr",
		a.id AS "id",
		a.name AS "name",
		a.url AS "url",
		a.isbutton AS "isbutton",
		a.create_time AS "createTime",
		a.update_time AS "updateTime",
		a.flag AS "flag",
		a.remark AS "remark",
		a.fid AS "fid",
		a.level AS "level"
	</sql>

    <sql id="jobMenuJoins">
    </sql>

    <select id="getMenuById" resultType="com.xmf.xcode.menu.model.Menu">
        SELECT
        <include refid="jobMenuColumns"/>
        FROM x_code_menu a
        <include refid="jobMenuJoins"/>
        WHERE a.id = #{id}
    </select>

    <select id="getTotalCount" resultType="Integer" parameterType="com.alibaba.fastjson.JSONObject">
        SELECT
        count(*) as count
        FROM x_code_menu a
        <include refid="jobMenuJoins"/>
        <where>
            flag=#{flag}
            <if test="flag != null and flag != ''">
                AND a.flag = #{flag}
            </if>
            <if test="name != null and name != ''">
                AND a.name = #{name}
            </if>
            <if test="fid != null and fid != ''">
                AND a.fid = #{fid}
            </if>
            <if test="level != null and level != ''">
                AND a.level = #{level}
            </if>
        </where>
    </select>

    <select id="getList" resultType="com.xmf.xcode.menu.model.Menu"
            parameterType="com.alibaba.fastjson.JSONObject">
        SELECT
        <include refid="jobMenuColumns"/>
        FROM
        (SELECT id from x_code_menu t
        <where>
            flag=#{flag}
            <if test="flag != null and flag != ''">
                AND t.flag = #{flag}
            </if>
            <if test="name != null and name != ''">
                AND t.name = #{name}
            </if>
            <if test="fid != null and fid != ''">
                AND t.fid = #{fid}
            </if>
            <if test="level != null and level != ''">
                AND t.level = #{level}
            </if>
        </where>
       ) b inner join
        x_code_menu a on b.id=a.id
        <choose>
            <otherwise>
                ORDER BY update_time desc
            </otherwise>
        </choose>
        limit #{startIndex},#{pageSize}
    </select>

    <select id="getMenuList" resultType="com.xmf.xcode.menu.model.Menu"
            parameterType="com.xmf.xcode.menu.model.Menu">
        SELECT
        <include refid="jobMenuColumns"/>
        FROM (SELECT id from x_code_menu t
        <where>
            <if test="name != null and name != ''">
                AND t.name = #{name}
            </if>
            <if test="fid != null and fid != ''">
                AND t.fid = #{fid}
            </if>
            <if test="level != null and level != ''">
                AND t.level = #{level}
            </if>
            and flag=#{flag}
        </where>
        ) b inner join x_code_menu a on b.id=a.id
        <choose>
            <otherwise>
                ORDER BY update_time desc
            </otherwise>
        </choose>
    </select>


    <select id="getRoleMenuList" resultType="com.xmf.xcode.menu.model.Menu"
            parameterType="java.util.Map">
        SELECT
        <include refid="jobMenuColumns"/>
        FROM
        x_code_menu a left join x_code_menu_role r on r.menu_id=a.id
        <where>
            a.flag=#{flag}
            <if test="level != null and level != ''">
                AND a.level = #{level}
            </if>
            <if test="fid != null and fid != ''">
                AND a.fid = #{fid}
            </if>
            <if test="roleCode != null and roleCode != ''">
                AND r.role_code = #{roleCode}
            </if>
            <if test="roleId != null and roleId>0">
                AND r.role_id = #{roleId}
            </if>
        </where>
        <choose>
            <otherwise>
                ORDER BY a.update_time desc
            </otherwise>
        </choose>
    </select>

    <select id="getSignleMenu" resultType="com.xmf.xcode.menu.model.Menu"
            parameterType="com.xmf.xcode.menu.model.Menu">
        SELECT
        <include refid="jobMenuColumns"/>
        FROM
        x_code_menu a
        <where>
            flag=#{flag}
            <if test="name != null and name != ''">
                AND a.name = #{name}
            </if>
            <if test="fid != null and fid != ''">
                AND a.fid = #{fid}
            </if>
            <if test="level != null and level != ''">
                AND a.level = #{level}
            </if>
        </where>
        limit 1
    </select>


    <insert id="add" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO x_code_menu(
        <if test="id != null and id != ''">
            id,
        </if>
        <if test="name != null and name != ''">
            name,
        </if>
        <if test="url != null and url != ''">
            url,
        </if>
        <if test="isbutton != null and isbutton != ''">
            isbutton,
        </if>
        <if test="updateTime != null ">
            update_time,
        </if>
        <if test="flag != null and flag != ''">
            flag,
        </if>
        <if test="remark != null and remark != ''">
            remark,
        </if>
        <if test="fid != null and fid != ''">
            fid,
        </if>
        <if test="level != null and level != ''">
            level,
        </if>
        create_time
        ) VALUES (
        <if test="id != null and id != ''">
            #{id},
        </if>
        <if test="name != null and name != ''">
            #{name},
        </if>
        <if test="url != null and url != ''">
            #{url},
        </if>
        <if test="isbutton != null and isbutton != ''">
            #{isbutton},
        </if>
        <if test="updateTime != null">
            #{updateTime},
        </if>
        <if test="flag != null and flag != ''">
            #{flag},
        </if>
        <if test="remark != null and remark != ''">
            #{remark},
        </if>
        <if test="fid != null and fid != ''">
            #{fid},
        </if>
        <if test="level != null and level != ''">
            #{level},
        </if>
        #{createTime}
        )
    </insert>

    <insert id="addTrainRecordBatch" useGeneratedKeys="true" parameterType="java.util.List">
        <selectKey resultType="long" keyProperty="id" order="AFTER">
            SELECT
            LAST_INSERT_ID()
        </selectKey>
        INSERT INTO x_code_menu(
        <if test="id != null and id != ''">
            #{id},
        </if>
        <if test="name != null and name != ''">
            #{name},
        </if>
        <if test="url != null and url != ''">
            #{url},
        </if>
        <if test="isbutton != null and isbutton != ''">
            #{isbutton},
        </if>
        <if test="updateTime != null">
            #{updateTime},
        </if>
        <if test="flag != null and flag != ''">
            #{flag},
        </if>
        <if test="remark != null and remark != ''">
            #{remark},
        </if>
        <if test="fid != null and fid != ''">
            #{fid},
        </if>
        <if test="level != null and level != ''">
            #{level},
        </if>
        #{createTime}
        ) VALUES
        <foreach collection="list" item="item" index="index" separator=",">
            (
            <if test="id != null">
                #{item.id},
            </if>
            <if test="name != null">
                #{item.name},
            </if>
            #{item.url},
            <if test="isbutton != null">
                #{item.isbutton},
            </if>
            <if test="updateTime != null">
                #{item.updateTime},
            </if>
            <if test="flag != null">
                #{item.flag},
            </if>
            <if test="remark != null">
                #{item.remark},
            </if>
            <if test="fid != null">
                #{item.fid},
            </if>
            <if test="level != null">
                #{item.level},
            </if>
            #{item.createTime}
            )
        </foreach>
    </insert>

    <update id="updateById">
        UPDATE x_code_menu SET
        <if test="name != null and name != ''">
            name = #{name},
        </if>
        url = #{url},
        <if test="isbutton != null and isbutton != ''">
            isbutton = #{isbutton},
        </if>
        <if test="flag != null and flag != ''">
            flag = #{flag},
        </if>
        <if test="remark != null and remark != ''">
            remark = #{remark},
        </if>
        <if test="fid != null and fid != ''">
            fid = #{fid},
        </if>
        <if test="level != null and level != ''">
            level = #{level},
        </if>
        update_time = #{updateTime}
        WHERE id = #{id}
    </update>

    <update id="delete">
	UPDATE x_code_menu SET
	flag = -1
		WHERE id = #{id}
	</update>
</mapper>